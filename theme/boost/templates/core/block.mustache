{{!
    @template theme_boost/block

    Example context (json):
    {
        "id": "block0",
        "showskiplink": true,
        "type": "html",
        "ariarole": "complementary",
        "title": "Test block",
        "blockinstanceid": 1,
        "content": "<p>Hello block world!</p>"
    }

}}
{{! Block Skip Link }}
{{#showskiplink}}
  <a href="#sb-{{skipid}}" class="sr-only sr-only-focusable">{{#str}}skipa, access, {{title}}{{/str}}</a>
{{/showskiplink}}

{{! Start Block Container }}
<section id="{{id}}"
     class="{{#hidden}}hidden{{/hidden}} block block_{{type}} {{#hascontrols}}block_with_controls{{/hascontrols}} card mb-3"
     role="{{ariarole}}"
     data-block="{{type}}"
     {{#arialabel}}
        aria-label={{#quote}}{{{arialabel}}}{{/quote}}
     {{/arialabel}}
     {{^arialabel}}
        {{#title}}
          aria-labelledby="instance-{{blockinstanceid}}-header"
        {{/title}}
     {{/arialabel}}>

    {{! Block contents }}
    <div class="card-body">

        {{! Block header }}
        <div class="panel-group" id="accordion4" role="tablist" aria-multiselectable="true">
        {{#title}}
                <h2 id="instance-{{blockinstanceid}}-header" class="card-title d-inline font-weight-bold" style="color:#3b3b3b">{{{title}}}</h2>
                <div class="panel-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-toggle="collapse" data-target="#collapse{{id}}" aria-expanded="true">
                    </button>
                </div>
        {{/title}}

        {{#hascontrols}}
            <div class="block-controls pull-right header">
                {{{controls}}}
            </div>
        {{/hascontrols}}
            <div id="collapse{{id}}" class="panel-collapse collapse show" role="tabpanel">
                <div class="card-text content mt-3">
                    {{{content}}}
                    <div class="footer">{{{footer}}}</div>
                    {{{annotation}}}
                </div>
            </div>
        </div>
    </div>

{{! End Block Container }}
</section>

{{! Block Skip Link Target }}
{{#showskiplink}}
  <span id="sb-{{skipid}}"></span>
{{/showskiplink}}
